{
  "name": "showdown",
  "version": "1.0.0",
  "description": "Showdown! for Discord",
  "main": "showdown.js",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.ts --quiet --fix && prettier src/**/*.ts --write",
    "build": "npm i && npm run lint && npx tsc -p ./ && npm run start",
    "start": "cd dist && node showdown.js",
    "prepare": "husky install"
  },
  "author": "castdrian",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint src/**/*.ts --fix",
      "prettier src/**/*.ts --write"
    ],
    "*.js": "eslint --cache --fix"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "prettier": "@sapphire/prettier-config",
  "dependencies": {
    "@pkmn/client": "^0.3.2",
    "@pkmn/dex": "^0.4.6",
    "@pkmn/randoms": "^0.4.5",
    "@pkmn/sim": "^0.4.5",
    "@pkmn/view": "^0.3.1",
    "@sapphire/decorators": "^3.1.4",
    "@sapphire/framework": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "discord-api-types": "^0.20.2",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.0.5",
    "@sapphire/prettier-config": "^1.2.4",
    "@sapphire/ts-config": "^3.1.4",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "tslib": "^2.3.0",
    "typescript": "^4.6.0"
  },
  "imports": {
    "#handlers/*": "./dist/handlers/*.js",
    "#types/*": "./dist/types/*.d.ts",
    "#config/*": "./dist/config/*.js",
    "#root/*": "./dist/*"
  }
}
