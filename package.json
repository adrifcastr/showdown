{
  "name": "showdown",
  "version": "1.0.0",
  "description": "Showdown! for Discord",
  "main": "showdown.js",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.ts --quiet --fix && prettier src/**/*.ts --write",
    "build": "npm i && npm run lint && npx tsc -p ./ && npm run start",
    "start": "cd dist && node showdown.js",
    "prepare": "husky install"
  },
  "author": "adrifcastr",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint src/**/*.ts --fix",
      "prettier src/**/*.ts --write"
    ],
    "*.js": "eslint --cache --fix"
  },
  "dependencies": {
    "@pkmn/client": "^0.3.2",
    "@pkmn/dex": "^0.4.6",
    "@pkmn/randoms": "^0.4.5",
    "@pkmn/sim": "^0.4.5",
    "@pkmn/view": "^0.3.1",
    "del": "^6.0.0",
    "discord.js": "^13.0.0-dev.02693bc02f45980d8165820a103220f0027b96b7",
    "dotenv": "^8.0.0",
    "last-commit-log": "^3.1.1",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "pretty-error": "^3.0.3",
    "recursive-readdir": "^2.2.2",
    "systeminformation": "^5.6.12",
    "zip-promise": "^1.1.1"
  },
  "devDependencies": {
    "@types/md5": "^2.3.0",
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "@types/recursive-readdir": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  }
}
