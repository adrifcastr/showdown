{
	"extends": "@sapphire/ts-config",
    "compilerOptions": {
        "moduleResolution": "node",
		"module": "ESnext",
		"rootDir": "./src",
        "outDir": "./dist",       
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types", "src/@types"],
		"noImplicitReturns": false,
		"paths": {
            "#handlers/*": ["handlers/*"],
            "#types/*": ["@types/*"],
            "#config/*": ["config/*"],
			"#root/*": ["*"],
        }
    }
}