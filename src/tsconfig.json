{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "../dist",
		"module": "ESNext",
		"target": "ESNext",
		"composite": true,
		"preserveConstEnums": true,
        "paths": {
			"#handlers/*": ["./handlers/*"],
			"#util/*": ["./util/*"],
			"#types/*": ["./@types/index.d.ts"],
		},
		"typeRoots": ["node_modules/@types", "src/@types"]
	},
	"include": ["."]
}